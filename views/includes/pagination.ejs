<section class="pagination">
  <% if (pagination.currentPage !== 1 && pagination.previoustPage !== 1) { %>
  <a href="?page=1">1</a>
  <% } %> <% if (pagination.hasPrevioustPage) { %>
  <a href="?page=<%= pagination.previoustPage %>"><%= pagination.previoustPage %></a>
  <% } %>
  <a href="?page=<%= pagination.currentPage %>" class="active"><%= pagination.currentPage %></a>
  <% if (pagination.hasNextPage) { %>
  <a href="?page=<%= pagination.nextPage %>"><%= pagination.nextPage %></a>
  <% } %> <% if (pagination.currentPage !== pagination.lastPage &&
  pagination.nextPage !== pagination.lastPage) { %>
  <a href="?page=<%= pagination.lastPage %>"><%= pagination.lastPage %></a>
  <% } %>
</section>